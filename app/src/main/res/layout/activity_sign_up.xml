<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" android:layout_marginStart="10dp"

    >
    <Button
        android:id="@+id/signSkip"
        android:layout_width="54.7dp"
        android:layout_height="35.5dp"
        android:layout_alignParentRight="true"
        android:textSize="7.3sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#15e6b6"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="42.7sp"
        android:gravity="center"
        android:text="SKIP"
        android:background="#00000000"
        />



    <ImageView android:layout_width="36.7dp"
        android:layout_height="33.7dp"
        android:src="@drawable/android_signup_add"
        android:layout_marginTop="40.7dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_above="@id/L_name"
        android:layout_alignStart="@+id/Gmail"
        android:background="#E8E8E8"
        android:id="@+id/F_name"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="5.9dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:fontFamily="sans-serif-medium"
        android:text="First Name"
        android:letterSpacing="0.01"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/Gmail"/>
    <EditText
        android:layout_above="@id/c_name"
        android:layout_alignStart="@+id/Gmail"
        android:background="#E8E8E8"
        android:id="@+id/L_name"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="5.9dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:fontFamily="sans-serif-medium"
        android:text="Last Name"
        android:letterSpacing="0.01"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/Gmail"/>
    <EditText
        android:layout_above="@id/e_addess"
        android:layout_alignStart="@+id/Gmail"
        android:background="#E8E8E8"
        android:id="@+id/c_name"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="5.9dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:fontFamily="sans-serif-medium"
        android:text="Create your username"
        android:letterSpacing="0.01"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/Gmail"/>
    <EditText
        android:layout_above="@id/passw"
        android:layout_alignStart="@+id/Gmail"
        android:background="#E8E8E8"
        android:id="@+id/e_addess"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="5.9dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:fontFamily="sans-serif-medium"
        android:text="Email Address"
        android:letterSpacing="0.01"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/Gmail"/>

    <EditText
        android:layout_above="@id/logInBut"
        android:layout_alignStart="@+id/Gmail"
        android:background="#E8E8E8"
        android:id="@+id/passw"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textSize="8.7sp"
        android:letterSpacing="0.01"
        android:textColor="#bcbcbc"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="15.5dp"
        android:paddingLeft="10dp"
        android:text="Password"
        android:layout_alignLeft="@+id/Gmail"/>

    <TextView
        android:id="@+id/logInBut"
        android:layout_alignStart="@+id/Gmail"
        android:layout_above="@+id/Gmail"
        android:background="@drawable/shape_gradient"
        android:layout_width="167.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="41.3sp"
        android:layout_marginBottom="6.9dp"
        android:gravity="center"
        android:text="Get Started"
        android:layout_alignLeft="@+id/Gmail"/>

    <TextView
        android:id="@+id/Gmail"
        android:layout_above="@+id/Guest"
        android:drawableLeft="@drawable/image_1"
        android:drawablePadding="-20dp"
        android:paddingLeft="20dp"
        android:background="#E8E8E8"
        android:layout_width="167.8dp"
        android:layout_height="23.7dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#077f7e"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="41.3sp"
        android:text="Continue with Google"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Guest"
        android:textSize="6sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:lineSpacingExtra="2sp"
        android:gravity="center_horizontal"
        tools:text="By continuing, you agree to FarmHausâ€™s
            Terms &amp; Conditions and Privacy Policy."
        />

    <TextView
        android:id="@+id/Guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="7.3sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#15e6b6"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="42.7sp"
        android:gravity="center_horizontal"
        android:text="LOG IN"
        />

</RelativeLayout>