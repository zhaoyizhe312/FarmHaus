<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" android:layout_marginStart="10dp"

    >


    <ImageView android:layout_width="62.8dp"
        android:layout_height="62.8dp"
        android:src="@drawable/android_welcome"
        android:layout_marginTop="60.7dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/logInBut"
        android:layout_alignStart="@+id/Gmail"
        android:layout_above="@+id/Gmail"
        android:background="@drawable/shape_gradient"
        android:layout_width="95.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="41.3sp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Log in"
        android:layout_alignLeft="@+id/Gmail"/>
    <Button
        android:id="@+id/SignUp"
        android:layout_above="@+id/Gmail"
        android:layout_alignEnd="@id/Gmail"
        android:background="#E8E8E8"
        android:layout_width="95.8dp"
        android:layout_height="23.3dp"
        android:textSize="8.7sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#13c39a"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="41.3sp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Sign up"
        android:layout_alignRight="@id/Gmail"/>
    <Button
        android:id="@+id/Gmail"
        android:layout_above="@+id/Guest"
        android:drawableLeft="@drawable/image_1"
        android:drawablePadding="-20dp"
        android:paddingLeft="20dp"
        android:background="#E8E8E8"
        android:layout_width="192.2dp"
        android:layout_height="23.7dp"
        android:textSize="8.7sp"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#077f7e"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="41.3sp"
        android:text="Continue with Google"
        />

    <TextView
        android:id="@+id/Guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="7.3sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#15e6b6"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="42.7sp"
        android:gravity="center_horizontal"
        android:text="CONTINUE AS GUEST"
        />

</RelativeLayout>