<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" android:layout_marginStart="10dp"

    >
    <EditText
        android:background="#E8E8E8"
        android:id="@+id/search"
        android:drawableLeft="@drawable/markets_search"
        android:drawableRight="@drawable/markets_list"
        android:layout_width="217.6dp"
        android:layout_height="32dp"
        android:textSize="8.7sp"
        android:layout_marginTop="10.9dp"
        android:lineSpacingExtra="41.3sp"
        android:textStyle="normal"
        android:textColor="#bcbcbc"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Search Location"
        android:letterSpacing="0.01"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:drawablePadding="7dp"/>


    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="217.6dp"
        android:layout_height="31.9dp"
        android:layout_below="@id/search"
        android:layout_marginTop="9.2dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="SUN"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp" />

        <TextView
            android:id="@+id/txt_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="MON"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp" />

        <TextView
            android:id="@+id/txt_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="TUE"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp" />

        <TextView
            android:id="@+id/txt_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="WED"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp"/>
        <TextView
            android:id="@+id/txt_thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="THU"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp"/>
        <TextView
            android:id="@+id/txt_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="FRI"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp"/>
        <TextView
            android:id="@+id/txt_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="SAT"
            android:textColor="@drawable/tab_menu_text"
            android:background="@drawable/textview_border"
            android:textSize="7.3sp"/>

    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="217.6dp"
        android:layout_height="2px"
        android:background="#15e6b6"
        android:layout_alignStart="@id/search"
        android:layout_below="@id/ly_tab_bar" android:layout_alignLeft="@id/search"/>

    <FrameLayout
        android:layout_width="217.6dp"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_tab_bar"
        android:id="@+id/ly_content"
        android:layout_centerHorizontal="true">

    </FrameLayout>





</RelativeLayout>